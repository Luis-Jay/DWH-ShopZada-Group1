# ShopZada Data Warehouse Environment Configuration

# Database Configuration
POSTGRES_USER=shopzada
POSTGRES_PASSWORD=shopzada123
POSTGRES_DB=shopzada_dwh

# Database Connection (for application use)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shopzada_dwh
DB_USER=shopzada
DB_PASSWORD=shopzada123

# Airflow Configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres/${POSTGRES_DB}
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__CORE__DAGS_FOLDER=/opt/airflow/dags
AIRFLOW__CORE__PLUGINS_FOLDER=/opt/airflow/plugins

# Metabase Configuration
MB_DB_TYPE=postgres
MB_DB_DBNAME=${POSTGRES_DB}
MB_DB_PORT=5432
MB_DB_USER=${POSTGRES_USER}
MB_DB_PASS=${POSTGRES_PASSWORD}
MB_DB_HOST=postgres
